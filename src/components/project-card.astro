---
const { projectName, projectImage, projectDesc, projectSlug } = Astro.props;
---

<a
  href={"/project/" + projectSlug}
  <div
  class="flex flex-col rounded-3xl bg-slate-100 hover:bg-sky-300 m-5 p-5 shadow-sm border border-slate-200 w-1/4 justify-center items-center text-center"
>
  <div class="mb-6">
    <h1 class="text-3xl font-bold">{projectName}</h1>
    <p>{projectDesc}</p>
  </div>
  <img
    class="w-92 rounded-3xl shadow-sm border border-slate-200"
    src={projectImage}
  />
</a>